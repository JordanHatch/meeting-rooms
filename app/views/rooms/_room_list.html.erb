<% if rooms.any? %>
  <div class="room-list">
    <h2><%= label %></h2>

    <ul>
      <% rooms.each do |room| %>
        <li class="room">
          <%= link_to room_path(room) do %>
            <h3><%= room.title %></h3>
            <span class="status"><%= room.status_message %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
