<%= semantic_form_for room do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :short_title, input_html: {
                                size: 4,
                                disabled: f.object.persisted?,
                              } %>
    <%= f.input :calendar_id, required: true %>
  <% end %>

  <%= f.inputs "Custom display settings" do %>
    <%= f.input :custom_colour, input_html: {
                                  maxlength: 7 # allow for preceding hash character
                                } %>
    <%= f.input :custom_free_message %>
    <%= f.input :custom_busy_message %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>
